  {\bf \normalsize \abstractname\vspace{-.5em}\vspace{0.2cm}}
  \setlength{\baselineskip}{10pt}\parbox{17.2cm}{\small #1 \par}
}}

%\def\endabstract{\if@twocolumn\else\endquotation\fi}
